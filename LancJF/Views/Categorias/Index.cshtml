@model IEnumerable<LancJF.Models.Categoria>

@{
    ViewData["Title"] = "Categorias";
}

<h2>@ViewData["Title"]</h2>

<hr />
<p>
    <div class="col-md-2">
        <a asp-action="Create" class="btn btn-success btn-block">Incluir</a>
    </div>
    
</p>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-xs">Alterar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-xs">Consultar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-xs">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
