@model LancJF.Models.Categoria

@{
    ViewData["Title"] = "Exluir Categoria";
}

<h2>@ViewData["Title"]</h2>

<h3>Você tem certeza que deseja excluir está categoria?</h3>
<div>
    <dl class="dl-horizontal alert-warning">
        <dt>
            @Html.DisplayNameFor(model => model.Id):
        </dt>        
        <dd>
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Nome):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <input type="submit" value="Excluir" class="btn btn-success col-md-2" />
        <a asp-action="Index" class="btn btn-default">Voltar</a>
    </form>
</div>
